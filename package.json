{
  "name": "eleventy-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "run-p clean eleventy:dev tailwind:dev sass:dev js:dev",
    "build": "run-s clean eleventy:build tailwind:build sass:build js:build",
    "eleventy:dev": "eleventy --serve",
    "eleventy:build": "eleventy",
    "tailwind:dev": "npx tailwindcss -i ./src/css/tw-styles.css -o ./dist/css/tw-styles.css --watch",
    "tailwind:build": "npx tailwindcss -i ./src/css/tw-styles.css -o ./dist/css/tw-styles.css --minify",
    "sass:dev": "sass --watch --embed-source-map src/scss:dist/css",
    "sass:build": "sass --no-source-map --style=compressed src/scss:dist/css",
    "clean": "rm -rf dist",
    "lint": "run-s lint:html lint:css lint:js",
    "lint:html": "pa11y-ci -c .pa11yci.json './dist/**/*.html'",
    "lint:css": "stylelint 'src/*css/**/*.*css' --color --formatter verbose",
    "js:dev": "esbuild src/js/*.js --format=esm --bundle=true --splitting=true --outdir=dist --watch --sourcemap=inline",
    "js:build": "esbuild src/js/*.js --format=esm --bundle=true --splitting=true --outdir=dist --minify=true",
    "lint:js": "eslint . --ext .js",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "sass": "^1.57.1",
    "tailwindcss": "^3.2.4"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.3.1",
    "esbuild": "^0.17.0",
    "eslint": "^8.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^3.0.1",
    "stylelint": "^14.16.1",
    "stylelint-config-standard-scss": "^6.1.0"
  }
}
